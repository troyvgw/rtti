{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017"],
        "types": ["mocha", "node"],
        "rootDir": "src",
        "outDir": "dist/commonjs",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,

        // Static checks
        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*.ts"]
}
